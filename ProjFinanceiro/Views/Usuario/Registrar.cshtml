@model UsuarioModel

<h1>Registrar minha conta</h1>
<br>
<form asp-controller="Usuario" asp-action="Registrar">
    <div class="form-group">
        <label for="email">Nome:</label>
        <input type="text" class="form-control" asp-for="Nome">
        <span asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label for="pwd">Senha:</label>
        <input type="password" class="form-control" asp-for="Senha">
        <span asp-validation-for="Senha"></span>
    </div>
    <div class="form-group">
        <label for="pwd">Email:</label>
        <input type="password" class="form-control" asp-for="Email">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label for="pwd">Data de Nascimento:</label>
        <input type="date" class="form-control" asp-for="DataNasc">
        <span asp-validation-for="DataNasc"></span>
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form> 